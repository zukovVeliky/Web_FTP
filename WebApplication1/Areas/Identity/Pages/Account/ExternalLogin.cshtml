@page
@model Identity.Pages.Account.ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h4 id="external-login-title">Propojení svého  @Model.ProviderDisplayName účtu.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Úspěšně jste ověřili svůj uživatelský účet u <strong>@Model.ProviderDisplayName</strong>.
    Prosím zadejte svojí e-mailovou adresu pro tyto stránky a dokončete své přihlášení.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrace</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
